

div.game-board
	div.game-row(ng-repeat="row in board")
		div.game-cell(ng-repeat="cell in row")

			button.btn.btn-default.btn-block(
				ng-disabled="isSetupArea(cell)",
				ng-hide="playerReady",
				ng-click="setupPut(cell)",
				ng-class="{'btn-danger':!isCellPieceIsYours(cell,true),'btn-primary':isCellPieceIsYours(cell,false)}"
			) &nbsp;{{setupCellPreview(cell)}}&nbsp;

div(ng-hide="playerReady")
	button.btn.btn-primary Ready
// setting up pieces
button.btn(
	ng-repeat="p in pieces",
	ng-click="setupHold(p)",
	ng-hide="isPieceSettedUp(p) || !p.yours",
	ng-class="{'btn-default':p!=setupHand,'btn-primary':p==setupHand}"
) {{rankToName(p.rank)}}